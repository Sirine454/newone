FUNCTION simple_sort( arr : ARRAY_OF FLOAT)
VAR
   i,j,n,value : INTEGER;
BEGIN
   n := arr.length;
   FOR i FROM 0 TO n- 1 STEP 1  DO
   value:=arr[i];
   j:=i;
   WHILE (j > 0) AND (arr[j − 1] > value) DO
      arr[j] := arr[j − 1];
      j := j − 1;
   END_WHILE
   arr[j] := value;
   END_FOR
   RETURN arr;
END
